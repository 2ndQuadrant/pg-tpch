#!/bin/bash

PGDATADIR=/dev/shm/$USER/pgdata
PGPORT=5442

BASEDIR=$(cd "$(dirname $0)"; pwd)
cd $BASEDIR

PORTLIST="$(lsof -i tcp:$PGPORT | tail -n +2 | awk '{print $2}')"
if [[ $(echo "$PORTLIST" | wc -w) -gt 0 ]];
then
  echo "The following processes have taken port $PGPORT"
  echo "Please terminate them before running this script"
  echo
  for p in $PORTLIST;
  do
    ps -o pid,cmd
  done
  exit -1
fi

for i in $(seq 1 22);
do
  ii=$(printf "%02d" $i)
  # echo "Starting the postgres server"
  perf record -g postgres -D $PGDATADIR -p $PGPORT &
  PGPID=$!
  sleep 2
  f="q$ii.sql"
  cgf="../q${ii}-callgraph.pdf"
  echo "Running query: $i"
  psql -p $PGPORT tpch <$f
  pg_ctl stop -D $PGDATADIR
  sleep 2
  dir="perfdata/q${ii}"
  mkdir -p $dir
  mv perf.data $dir/
  cd $dir
  echo "Creating the call graph: $cgf"
  perf script | python $BASEDIR/gprof2dot.py -f perf | dot -Tpdf -o $cgf &
  cd - >/dev/null
done

for p in $(jobs -p);
do
  wait $p
done

